enum IssueStatus {
  OPEN
  IN_PROGRESS
  DONE
}

model Issue {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  status      IssueStatus @default(OPEN)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([status])
}
